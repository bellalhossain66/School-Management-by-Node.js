<%- include('header.ejs') %>
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Question Bank</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/teacher">Dashboard</a></li>
                            <li class="breadcrumb-item active">Question Bank</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="">
                            <div class="card-header">
                                <h3 class="card-title">Category</h3>
                                <div class="card-tools">
                                    <div class="input-group">
                                        <input type="search" class="form-control category-search" placeholder="Search">
                                        <span class="btn btn-outline-success add-category rounded-0"><i class="fas fa-plus"></i> Add </span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="card add-category-box d-none">
                                    <div class="card-body">
                                        <div class="col-lg-12">
                                            <form action="javascript:void(0)">
                                                <div class="row justify-content-center">
                                                    <div class="col-lg-8 col-md-8 col-sm-12">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control category-name" placeholder="Category Name">
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 col-sm-12">
                                                        <div class="form-group">
                                                            <input type="submit" class="form-control bg-info" id="add-category-submit">
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="category_list">
                                    <div class="card subject">
                                        <div class="card-body text-center">
                                            <span class="text-dark" style="font-size: 20px;">No Data</span><br>
                                            <i class="text-dark fas fa-folder-open fa-lg"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="">
                            <div class="card-header">
                                <h3 class="card-title">Sub Category</h3><span class="category-id" category-id></span>
                                <div class="card-tools">
                                    <div class="input-group">
                                        <input type="search" class="form-control sub-category-search" placeholder="Search">
                                        <span class="btn btn-outline-success add-sub-category rounded-0"><i class="fas fa-plus"></i> Add </span>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="card add-sub-category-box d-none">
                                    <div class="card-body">
                                        <div class="col-lg-12">
                                            <form action="javascript:void(0)">
                                                <div class="row justify-content-center">
                                                    <div class="col-lg-8 col-md-8 col-sm-12">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control sub-category-name" placeholder="Sub Category Name">
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 col-sm-12">
                                                        <div class="form-group">
                                                            <input type="submit" class="form-control bg-info" id="add-sub-category-submit">
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="sub_category_list">
                                    <div class="card subject">
                                        <div class="card-body text-center">
                                            <span class="text-dark" style="font-size: 20px;">No Data</span><br>
                                            <i class="text-dark fas fa-folder-open fa-lg"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <%- include('footer.ejs') %>
        <script src="./js/teacher/question-bank.js"></script>