<%- include('header.ejs') %>
    <style>
        .subject,
        .category,
        .sub-category,
        .question-option-delete {
            cursor: pointer;
        }
        
        .mcq-list-box .mcq_list {
            height: 100%;
            max-height: 900px;
            overflow: auto;
        }
        
         ::-webkit-scrollbar {
            width: 2px;
        }
        
         ::-webkit-scrollbar-thumb {
            background: green;
        }
        
         ::placeholder {
            color: rgb(36, 33, 33) !important;
        }
    </style>
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">MCQ Question</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/teacher">Home</a></li>
                            <li class="breadcrumb-item"><a href="/subjective">Subjective</a></li>
                            <li class="breadcrumb-item name1"></li>
                            <li class="breadcrumb-item name2"></li>
                            <li class="breadcrumb-item name3"></li>
                            <li class="breadcrumb-item active">MCQ Question</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-12 col-md-12 view-question-bank-box">
                        <div class="card card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Total mcq question: <span class="text-bold text-green h3 total-mcq"></span>
                                </h3>
                                <div class="card-tools">
                                    <div class="input-group">
                                        <input type="search" class="form-control view-mcq-search" placeholder="Search">
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="card-body mcq-list-box">
                                    <div class="row mcq_list"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <%- include('footer.ejs') %>
        <script src="./js/teacher/subjective-question.js"></script>